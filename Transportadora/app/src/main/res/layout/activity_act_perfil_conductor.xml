<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="transportadora.Conductor.Act_preguntas_conductor">

    <ImageView
        android:id="@+id/imageViewFond8IUo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/fondo_boton_volver" />

    <TextView
        android:id="@+id/txt_volver_reg2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="75dp"
        android:text="Volver"
        android:textStyle="bold"
        android:textColor="@color/negro"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/txt_volver_reg2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="40dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Actualiza tus Datos"
                android:textSize="24sp"
                android:fontFamily="@font/gorditas_bold"
                android:textColor="@color/naranja"
                android:layout_marginBottom="24dp"/>

            <!-- Foto de Perfil -->
            <ImageView
                android:id="@+id/img_foto_perfil"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:src="@android:drawable/ic_menu_camera"
                android:contentDescription="Foto de perfil"
                android:layout_marginBottom="24dp"/>

            <!-- Nombre -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre completo"
                android:textStyle="bold"
                android:textColor="@color/negro" />
            <EditText
                android:id="@+id/txt_nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="16dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="@color/grisoscuro" />

            <!-- Tipo de Identificación -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo de identificación"
                android:textStyle="bold"
                android:textColor="@color/negro" />
            <Spinner
                android:id="@+id/txt_tipo_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="16dp"
                android:entries="@array/tipos_id" />

            <!-- Número de Identificación -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Número de identificación"
                android:textStyle="bold"
                android:textColor="@color/negro" />
            <EditText
                android:id="@+id/txt_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="16dp"
                android:ems="10"
                android:inputType="text"
                android:textColor="@color/grisoscuro" />

            <!-- Placa del vehículo -->

            <!-- Correo electrónico -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Correo electrónico"
                android:textStyle="bold"
                android:textColor="@color/negro" />
            <EditText
                android:id="@+id/txt_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="16dp"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:textColor="@color/grisoscuro" />

            <!-- Dirección de residencia -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dirección de residencia"
                android:textStyle="bold"
                android:textColor="@color/negro" />
            <EditText
                android:id="@+id/txt_dir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="16dp"
                android:ems="10"
                android:inputType="textPostalAddress"
                android:textColor="@color/grisoscuro" />
            
            <!-- Código Postal -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Código Postal"
                android:textStyle="bold"
                android:textColor="@color/negro" />
            <EditText
                android:id="@+id/txt_codigo_postal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="16dp"
                android:ems="10"
                android:inputType="number"
                android:textColor="@color/grisoscuro" />

            <!-- País de residencia -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="País de residencia"
                android:textStyle="bold"
                android:textColor="@color/negro" />

            <Spinner
                android:id="@+id/txt_pais"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="16dp"
                android:entries="@array/paises" />

            <!-- Departamento -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Departamento"
                android:textStyle="bold"
                android:textColor="@color/negro" />

            <Spinner
                android:id="@+id/txt_departamento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="16dp"
                android:entries="@array/departamentos" />

            <!-- Ciudad -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ciudad"
                android:textStyle="bold"
                android:textColor="@color/negro" />

            <Spinner
                android:id="@+id/txt_ciudad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="16dp"
                android:entries="@array/ciudades" />

            <!-- Nacionalidad -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nacionalidad"
                android:textStyle="bold"
                android:textColor="@color/negro" />
            <Spinner
                android:id="@+id/txt_nacionalidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="16dp"
                android:entries="@array/paises" />

            <!-- Género -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Género"
                android:textStyle="bold"
                android:textColor="@color/negro" />
            <Spinner
                android:id="@+id/spinner_genero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="32dp"
                android:entries="@array/genero" />

            <!-- Preguntas de seguridad (3 preguntas + respuestas) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Preguntas de seguridad"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:textColor="@color/negro" />

            <Spinner
                android:id="@+id/spinner_pregunta1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/txt_respuesta1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Respuesta 1"
                android:layout_marginBottom="12dp"
                android:inputType="text" />

            <Spinner
                android:id="@+id/spinner_pregunta2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/txt_respuesta2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Respuesta 2"
                android:layout_marginBottom="12dp"
                android:inputType="text" />

            <Spinner
                android:id="@+id/spinner_pregunta3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/txt_respuesta3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Respuesta 3"
                android:layout_marginBottom="24dp"
                android:inputType="text" />

            <Button
                android:id="@+id/btn_actualizar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Actualizar Datos"
                android:backgroundTint="@color/naranja"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
