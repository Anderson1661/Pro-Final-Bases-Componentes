<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_servicio_card"
    android:elevation="9dp"
    android:orientation="vertical"
    android:padding="18dp">

    <TextView
        android:id="@+id/tvServicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Servicio 5"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvOrigen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Origen: Dirección, Ciudad"
        android:textSize="14sp"
        android:textColor="?android:attr/textColorPrimary"
        android:layout_marginBottom="4dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvDestino"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Destino: Dirección, Ciudad"
        android:textSize="14sp"
        android:textColor="?android:attr/textColorPrimary"
        android:layout_marginBottom="16dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="Pago al Conductor:"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="14dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvPagoConductor"  android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="130000"
            android:textColor="@color/naranja" android:textSize="16dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tvClienteNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cliente: Nombre Completo"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="?android:attr/textColorPrimary"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/tvClienteTelefonos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Teléfonos: 3001234567, 3109876543"
        android:textSize="14sp"
        android:textColor="?android:attr/textColorPrimary"
        android:layout_marginTop="4dp"
        android:visibility="gone"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/tvPasajeros"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pasajeros: Juan, Pedro, Maria"
        android:textSize="14sp"
        android:textColor="?android:attr/textColorPrimary"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:visibility="gone"
        tools:visibility="visible"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/btnAceptarServicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aceptar"
            android:backgroundTint="@color/naranja"
            android:textColor="@android:color/white"
            android:layout_marginEnd="8dp"
            style="@style/Widget.AppCompat.Button"
            android:textSize="12sp"
            android:paddingHorizontal="16dp"
            android:visibility="visible" />

        <Button
            android:id="@+id/btnFinalizarServicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Finalizar"
            android:backgroundTint="@color/naranja"
            android:textColor="@android:color/white"
            style="@style/Widget.AppCompat.Button"
            android:textSize="12sp"
            android:paddingHorizontal="16dp"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>