<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="18dp"
    android:background="@drawable/bg_servicio_card"
    android:elevation="9dp">

    <TextView
        android:id="@+id/tvServicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Servicio 5"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:textColor="?android:attr/textColorPrimary"/>

    <!-- Estado del servicio -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp">

        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/toggle_button_group"
            android:layout_width="306dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            app:selectionRequired="true"
            app:singleSelection="true">

            <Button
                android:id="@+id/btnPendiente"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pendiente"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btnEnCurso"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="En Curso"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btnCompletado"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Completado"
                android:textSize="10sp" />

        </com.google.android.material.button.MaterialButtonToggleGroup>
    </RelativeLayout>

    <!-- Método de pago -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="Método de pago:"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tvMetodoPago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="Efectivo"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="12dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <!-- Cliente -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="Cliente:"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tvNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="Carlos"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="12dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <!-- Dirección de origen -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="Dirección de origen:"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tvDireccionOrigen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="Calle 45 #12-30, Bogotá"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="12dp" />
    </RelativeLayout>

    <!-- Dirección de destino -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="Dirección de destino:"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tvDireccionDestino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="Carrera 10 #20-15, Medellín"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="12dp" />
    </RelativeLayout>

    <!-- Valor -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="Valor:"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tvValor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="130000"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="12dp" />
    </RelativeLayout>

</LinearLayout>