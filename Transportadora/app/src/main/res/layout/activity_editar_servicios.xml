<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="transportadora.Administrador.Servicios.Editar_servicios">

    <!-- Fondo fijo -->
    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/fondo_boton_volver"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Botón Volver -->
    <TextView
        android:id="@+id/txt_volver_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="80dp"
        android:text="Volver"
        android:textStyle="bold"
        android:textColor="@color/negro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Título fijo -->
    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Editar un Servicio"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/negro"
        app:layout_constraintTop_toBottomOf="@id/txt_volver_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Contenido scrolleable -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/textView6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Id del Servicio"
                android:layout_marginTop="30dp"
                android:textColorHint="@color/grisclaro"
                android:textColor="@color/negro" />
            <EditText
                android:id="@+id/txt_id_servicio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="primary key"
                android:inputType="text"
                android:padding="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cliente del Servicio"
                android:textColor="@color/negro"
                android:layout_marginTop="20dp" />
            <Spinner
                android:id="@+id/spinner_cliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Conductor del Servicio"
                android:textColor="@color/negro"
                android:layout_marginTop="20dp" />
            <Spinner
                android:id="@+id/spinner_condcutor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- Fecha de envío -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fecha de Reserva del Servicio"
                android:layout_marginTop="30dp"
                android:textColorHint="@color/grisclaro"
                android:textColor="@color/negro" />
            <EditText
                android:id="@+id/txt_fecha_envio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Selecciona la fecha"
                android:inputType="date"
                android:padding="10dp" />

            <!-- Dirección de origen (Mía u otra) -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dirección de origen"
                android:textColor="@color/negro"
                android:layout_marginTop="20dp" />
            <Spinner
                android:id="@+id/spinner_origen_tipo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- Dirección de origen -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dirección de origen"
                android:textColor="@color/negro"
                android:textColorHint="@color/grisclaro"
                android:layout_marginTop="20dp" />
            <EditText
                android:id="@+id/txt_direccion_origen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ejemplo: Calle 123 #45-67"
                android:inputType="textPostalAddress"
                android:padding="10dp" />

            <!-- Departamento de origen -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Departamento de origen"
                android:textColor="@color/negro"
                android:layout_marginTop="20dp" />
            <Spinner
                android:id="@+id/spinner_depto_origen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- Ciudad de origen -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ciudad de origen"
                android:textColor="@color/negro"
                android:layout_marginTop="20dp" />
            <Spinner
                android:id="@+id/spinner_ciudad_origen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- Tipo de servicio -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tipo de servicio"
                android:textColor="@color/negro"
                android:layout_marginTop="20dp" />
            <Spinner
                android:id="@+id/spinner_tipo_servicio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- Cantidad de pasajeros -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cantidad de pasajeros"
                android:textColor="@color/negro"
                android:layout_marginTop="20dp" />
            <Spinner
                android:id="@+id/spinner_cantidad_pasajeros"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- Pasajeros -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre completo pasajero 1"
                android:textColor="@color/negro"
                android:layout_marginTop="20dp" />
            <EditText
                android:id="@+id/txt_pasajero1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre completo"
                android:textColorHint="@color/grisclaro"
                android:inputType="textPersonName"
                android:padding="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre completo pasajero 2"
                android:textColor="@color/negro"
                android:layout_marginTop="10dp" />
            <EditText
                android:id="@+id/txt_pasajero2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre completo"
                android:textColorHint="@color/grisclaro"
                android:inputType="textPersonName"
                android:padding="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre completo pasajero 3"
                android:textColor="@color/negro"
                android:layout_marginTop="10dp" />
            <EditText
                android:id="@+id/txt_pasajero3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre completo"
                android:textColorHint="@color/grisclaro"
                android:inputType="textPersonName"
                android:padding="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre completo pasajero 4"
                android:textColor="@color/negro"
                android:layout_marginTop="10dp" />
            <EditText
                android:id="@+id/txt_pasajero4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre completo"
                android:textColorHint="@color/grisclaro"
                android:inputType="textPersonName"
                android:padding="10dp" />

            <!-- Categoría de servicio -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Categoría de servicio"
                android:textColor="@color/negro"
                android:layout_marginTop="20dp" />
            <Spinner
                android:id="@+id/spinner_categoria_servicio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- Dirección de entrega -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dirección de destino"
                android:textColor="@color/negro"
                android:layout_marginTop="20dp" />
            <EditText
                android:id="@+id/txt_direccion_entrega"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ejemplo: Carrera 10 #15-22"
                android:inputType="textPostalAddress"
                android:textColorHint="@color/grisclaro"
                android:padding="10dp" />

            <!-- País destino -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="País de destino"
                android:textColor="@color/negro"
                android:layout_marginTop="20dp" />
            <Spinner
                android:id="@+id/spinner_pais_destino"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- Departamento destino -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Departamento de destino"
                android:textColor="@color/negro"
                android:layout_marginTop="20dp" />
            <Spinner
                android:id="@+id/spinner_depto_destino"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- Ciudad destino -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ciudad de destino"
                android:textColor="@color/negro"
                android:layout_marginTop="20dp" />
            <Spinner
                android:id="@+id/spinner_ciudad_destino"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- Campos calculados -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kilómetros del recorrido"
                android:textColor="@color/negro"
                android:layout_marginTop="30dp" />
            <TextView
                android:id="@+id/txt_km_recorrido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0 km"
                android:textColor="@color/grisoscuro" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total a pagar"
                android:textColor="@color/negro"
                android:layout_marginTop="10dp" />
            <TextView
                android:id="@+id/txt_total_pagar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="$0"
                android:textColor="@color/grisoscuro" />

            <!-- Método de pago -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Método de pago"
                android:textColor="@color/negro"
                android:layout_marginTop="20dp" />
            <Spinner
                android:id="@+id/spinner_metodo_pago"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/buttonDescartar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descartar cambios"
                android:textColor="@color/blanco"
                android:backgroundTint="@color/grisoscuro"
                android:layout_marginTop="50dp"
                android:layout_gravity="center_horizontal"
                app:layout_constraintTop_toTopOf="@+id/txt_contra"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <Button
                android:id="@+id/buttonGuardar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guardar cambios"
                android:textColor="@color/blanco"
                android:backgroundTint="@color/naranja"
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"
                app:layout_constraintTop_toTopOf="@+id/buttonDescartar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
