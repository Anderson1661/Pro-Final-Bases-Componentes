<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_marginBottom="12dp"
    android:background="@drawable/borde_cuadro">

    <!-- Título principal -->
    <TextView
        android:id="@+id/txt_id_servicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Servicio #101"
        android:textStyle="bold"
        android:textColor="@color/naranja"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"/>

    <!-- Cliente -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cliente:"
            android:textStyle="bold"
            android:textColor="@color/negro"/>

        <TextView
            android:id="@+id/txt_cliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ana Martínez"
            android:textColor="@color/negro"/>
    </LinearLayout>

    <!-- Tipo de servicio -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tipo de servicio:"
            android:textStyle="bold"
            android:textColor="@color/negro"/>

        <TextView
            android:id="@+id/txt_tipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alimentos - Estándar"
            android:textColor="@color/negro"/>
    </LinearLayout>

    <!-- Método de pago -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Método de pago:"
            android:textStyle="bold"
            android:textColor="@color/negro"/>

        <TextView
            android:id="@+id/txt_metodo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transferencia"
            android:textColor="@color/negro"/>
    </LinearLayout>

    <!-- Fecha -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Fecha:"
            android:textStyle="bold"
            android:textColor="@color/negro"/>

        <TextView
            android:id="@+id/txt_fecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2025-11-12"
            android:textColor="@color/grisoscuro"/>
    </LinearLayout>

    <!-- Total servicio -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Total servicio:"
            android:textStyle="bold"
            android:textColor="@color/negro"/>

        <TextView
            android:id="@+id/txt_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$150.000"
            android:textColor="@color/negro"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- Pago al conductor -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="2dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pago recibido:"
            android:textStyle="bold"
            android:textColor="@color/negro"/>

        <TextView
            android:id="@+id/txt_pago_conductor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$45.000"
            android:textColor="@color/amarillo"
            android:textStyle="bold"/>
    </LinearLayout>

</LinearLayout>
