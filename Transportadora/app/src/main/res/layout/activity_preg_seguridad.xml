<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="40dp"
    tools:context="transportadora.Compartido.Preg_seguridad">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/fondo_boton_volver" />

    <TextView
        android:id="@+id/txt_volver_reg2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginTop="75dp"
        android:text="Volver"
        android:textStyle="bold"
        android:textColor="@color/negro"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/txt_volver_reg2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"
            android:paddingBottom="40dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sabemos que eres tÃº, pero es mejor confirmar..."
                android:textSize="20sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/negro" />

            <!-- ðŸ”¹ Campo de correo -->
            <EditText
                android:id="@+id/txt_correo_recuperar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:hint="Ingresa tu correo registrado"
                android:inputType="textEmailAddress"
                android:textColor="@color/grisoscuro"
                android:textColorHint="@color/grisclaro"
                android:padding="10dp" />

            <!-- ðŸ”¹ BotÃ³n para habilitar preguntas -->
            <Button
                android:id="@+id/buttonHabilitarRespuestas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Habilitar respuestas"
                android:textColor="@color/blanco"
                android:backgroundTint="@color/naranja"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal" />

            <!-- ðŸ”¹ Pregunta 1 -->
            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:text="Pregunta de seguridad 1"
                android:textStyle="bold"
                android:textColor="@color/negro"
                android:visibility="gone" />

            <EditText
                android:id="@+id/txt_respuesta1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:hint="Respuesta 1"
                android:textColor="@color/grisoscuro"
                android:textColorHint="@color/grisclaro"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:visibility="gone" />

            <!-- ðŸ”¹ Pregunta 2 -->
            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Pregunta de seguridad 2"
                android:textStyle="bold"
                android:textColor="@color/negro"
                android:visibility="gone" />

            <EditText
                android:id="@+id/txt_respuesta2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:hint="Respuesta 2"
                android:textColor="@color/grisoscuro"
                android:textColorHint="@color/grisclaro"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:visibility="gone" />

            <!-- ðŸ”¹ Pregunta 3 -->
            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Pregunta de seguridad 3"
                android:textStyle="bold"
                android:textColor="@color/negro"
                android:visibility="gone" />

            <EditText
                android:id="@+id/txt_respuesta3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:hint="Respuesta 3"
                android:textColor="@color/grisoscuro"
                android:textColorHint="@color/grisclaro"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:visibility="gone" />

            <!-- ðŸ”¹ BotÃ³n final -->
            <Button
                android:id="@+id/buttonVerificarPreguntas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Verificar"
                android:textColor="@color/blanco"
                android:backgroundTint="@color/naranja"
                android:layout_marginTop="70dp"
                android:layout_gravity="center_horizontal"
                android:visibility="gone" />
        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
