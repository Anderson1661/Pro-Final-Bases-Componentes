<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_boton_volver"
    tools:context="transportadora.Compartido.Login">

    <!-- Botón Volver fijo -->
    <TextView
        android:id="@+id/txt_volver_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="80dp"
        android:text="Volver"
        android:textStyle="bold"
        android:textColor="@color/negro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Contenido desplazable debajo del botón Volver -->
    <ScrollView
        android:id="@+id/scroll_contenido"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/txt_volver_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingBottom="40dp"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="¡Bienvenido de nuevo!"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/negro" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/logo_borde"
                android:contentDescription="Logo" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="Correo"
                android:textColor="@color/negro" />

            <EditText
                android:id="@+id/txt_correo_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="correo@ejemplo.com"
                android:inputType="textEmailAddress"
                android:textColor="@color/grisoscuro"
                android:textColorHint="@color/grisclaro" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Contraseña"
                android:textColor="@color/negro" />

            <EditText
                android:id="@+id/txt_contra_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="******"
                android:inputType="numberPassword"
                android:textColor="@color/grisoscuro"
                android:textColorHint="@color/grisclaro" />

            <TextView
                android:id="@+id/txt_olvidar_contra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:clickable="true"
                android:text="¿Olvidaste la contraseña?"
                android:textColor="@color/naranja"
                android:textSize="12sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/boton_ingresar_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:backgroundTint="@color/naranja"
                android:text="Ingresar"
                android:textColor="@color/blanco" />

            <TextView
                android:id="@+id/txt_registrar_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="¿No tienes una cuenta?\nRegístrate ahora"
                android:textAlignment="center"
                android:textColor="@color/negro"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_registrar_conductor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="¿Quieres hacer parte de nuestros conductores?\nHaz click aquí"
                android:textAlignment="center"
                android:textColor="@color/negro"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>