<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="transportadora.Administrador.Administradores.Administrar_administradores">

    <!-- Fondo fijo -->
    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/fondo_boton_volver"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Texto Volver -->
    <TextView
        android:id="@+id/txt_volver_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="80dp"
        android:text="Volver"
        android:textStyle="bold"
        android:textColor="@color/negro"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Contenedor general del contenido -->
    <FrameLayout
        android:id="@+id/frameContenido"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@id/txt_volver_login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Contenido scrollable -->
            <ScrollView
                android:id="@+id/scrollContenido"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:fillViewport="true"
                android:background="@color/blanco"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/menuInferior"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="16dp"
                    android:paddingBottom="32dp">

                    <!-- Título -->
                    <TextView
                        android:id="@+id/textViewTitulo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Administradores"
                        android:textAlignment="center"
                        android:textColor="@color/negro"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_marginBottom="16dp" />

                    <!-- Botón Crear -->
                    <Button
                        android:id="@+id/btnCrear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Crear un Administrador"
                        android:textSize="12sp"
                        android:backgroundTint="@color/naranja"
                        android:textColor="#FFFFFF"
                        android:gravity="center"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="20dp" />

                    <!-- Lista contenedora -->
                    <LinearLayout
                        android:id="@+id/layoutAdministradores"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:divider="@drawable/divider_line"
                        android:showDividers="middle" />

                    <!-- Ejemplo de tarjeta de servicio -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/bg_servicio_card"
                        android:padding="12dp"
                        android:layout_marginBottom="12dp"
                        android:elevation="3dp">

                        <!-- Columna izquierda -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvServicio"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Servicio: Envío Paquete #A1423"
                                android:textStyle="bold"
                                android:textColor="@color/negro"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/tvFecha"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Fecha: 12/09/2025"
                                android:textColor="#616161"
                                android:textSize="14sp"
                                android:layout_marginTop="2dp" />

                            <TextView
                                android:id="@+id/tvOrigen"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Origen: Calle 45 #12-30, Bogotá"
                                android:textColor="#616161"
                                android:textSize="14sp"
                                android:layout_marginTop="2dp" />

                            <TextView
                                android:id="@+id/tvDestino"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Destino: Carrera 10 #20-15, Medellín"
                                android:textColor="#616161"
                                android:textSize="14sp"
                                android:layout_marginTop="2dp" />

                            <TextView
                                android:id="@+id/tvTipoServicio"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tipo: Pasajeros"
                                android:textColor="#616161"
                                android:textSize="14sp"
                                android:layout_marginTop="2dp" />

                            <TextView
                                android:id="@+id/tvEstado"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Estado: Finalizado"
                                android:textColor="#616161"
                                android:textSize="14sp"
                                android:layout_marginTop="2dp" />
                        </LinearLayout>

                        <!-- Columna derecha -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">

                            <Button
                                android:id="@+id/btnEditar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Editar"
                                android:textSize="12sp"
                                android:backgroundTint="@color/grisoscuro"
                                android:textColor="#FFFFFF"
                                android:layout_marginBottom="4dp" />

                            <Button
                                android:id="@+id/btnEliminar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Eliminar"
                                android:textSize="12sp"
                                android:backgroundTint="@color/naranja"
                                android:textColor="#FFFFFF"
                                android:layout_marginBottom="4dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>

            <!-- Menú inferior fijo -->
            <LinearLayout
                android:id="@+id/menuInferior"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
